                          @Html.ValidationMessageFor(model => model.KullanıcıAdı, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      @Html.LabelFor(model => model.Eposta, htmlAttributes: new { @class = "control-label col-md-2" })
