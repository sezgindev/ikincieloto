                      <div class="col-xs-4">
                          @Html.EditorFor(model => model.şifre, new { htmlAttributes = new { @class = "form-control" } })
                          @Html.ValidationMessageFor(model => model.şifre, "", new { @class = "text-danger" })
                      </div>
                  </div>

                  <div class="form-group">
                      <div class="col-md-offset-2 col-md-10" style="margin-left:25%;">
                          <input type="submit" value="Submit" class="btn btn-default" />
                      </div>
                  </div>
              </div>
    }


</body>
</html>

