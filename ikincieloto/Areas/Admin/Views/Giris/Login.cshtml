@model ikincieloto.Areas.Admin.Models.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    
    <link href="~/Content/loginstye.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/loginstye.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Admin Girişi</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="center2">
                    @Html.LabelFor(model => model.KullanıcıAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                    <div class="col-xs-5 center">
                        @Html.EditorFor(model => model.KullanıcıAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KullanıcıAdi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="center2">
                        @Html.LabelFor(model => model.Şifre, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-xs-5 center">
                        @Html.EditorFor(model => model.Şifre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Şifre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Giriş" class="button" />
                    </div>
                </div>
            </div>
    }
 
</body>
</html>
